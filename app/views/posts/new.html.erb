<h2>New Post</h2>
<%= form_with model: @post, url: post_create_new_path, method: :post, local: true, scope: :post do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :text %><br>
    <%= f.text_area :text, size: "21x21" %>
  </div>

  <div>
    <br>
    <%= f.submit "Add Post" %>
  </div>
<% end %>
